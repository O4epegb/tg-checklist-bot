{
  "name": "bot",
  "private": true,
  "scripts": {
    "prepare-disabled": "husky install",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register ./src/index.ts",
    "vercel-build": "NODE_ENV=production ts-node -r tsconfig-paths/register ./index.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts,tsx,js",
    "test-all": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "grammy": "^1.17.2"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "dotenv": "^16.3.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
